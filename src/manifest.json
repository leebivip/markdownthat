{
  "manifest_version": 2,

  "name": "rMarkdown",
  "description": "Convert a reddit post or comment to markdown",
  "version": "1.0",

  "permissions": [
    "activeTab"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.reddit.com/*"],
      "js": ["lib/jquery-2.2.0.min.js", "js/contentscript.js"]
    }
  ],

  "browser_action": {
    "default_popup": "popup.html"
  }
}
