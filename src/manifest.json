{
  "manifest_version": 2,

  "name": "Mark That Down",
  "description": "Markdown selected text from context menu or a reddit/quora post",
  "version": "1.0",

  "permissions": [
    "activeTab",
    "contextMenus"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/jquery-2.2.0.min.js", "js/contentscript.js"],
      "css": ["css/popup.css"]
    }
  ],

  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },

  "icons": { "128": "icon128.png"
  }
}
